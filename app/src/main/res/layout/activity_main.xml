<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tab"
        layout="@layout/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab"></FrameLayout>

    <include
        layout="@layout/layout_night_cover"
    ></include>
    <com.yzf.template.view.SwitchNightRelativeLayout
        android:id="@+id/rl_switch_night"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></com.yzf.template.view.SwitchNightRelativeLayout>

</RelativeLayout>